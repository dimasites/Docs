# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
tab_width = 4
max_line_length = off

[*.{js,ts,vue,css,json,yml}]
indent_style = space
tab_width = 2

[*.md]
indent_style = space
tab_width = 2
max_line_length = off
trim_trailing_whitespace = false
